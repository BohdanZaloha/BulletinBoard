@model Announcement

<form asp-action="DeleteAnnouncement" method="post">
    <input asp-for="Id" hidden />
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Delete announcement details</h1>
        <hr />
        <div class="row">
            <div class="col-2">
                <label asp-for="Title" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Title" class="form-control"  readonly/>
            </div>

            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="Status" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Status" class="form-control" readonly />
            </div>

            <div class="col-2">
                <label asp-for="CategoryId" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryId" class="form-control" readonly />
            </div>
            <div class="col-2">
                <label asp-for="SubCategoryId" class="control-label pt-2" style="font-size:14px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="SubCategoryId" class="form-control" readonly />
            </div>
            <br />
            <div class="col-5 offset-2">
                <a asp-action="Index" asp-controller="Announcements" class="btn btn-primary form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section SCripts {
    <partial name="_ValidationScriptsPartial" />
}
